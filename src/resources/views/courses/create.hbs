<div class="mt-4">
    <h3>Thêm khóa học</h3>

    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="name" name="name">
        </div>

        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <input type="text" class="description" name="description">
        </div>

        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="videoId" name="videoId">
        </div>

        <div class="form-group">
            <label for="level">Trình độ </label>
            <input type="text" class="level" name="level">
        </div> 

        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>